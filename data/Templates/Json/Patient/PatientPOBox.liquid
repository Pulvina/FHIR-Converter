{
    "resourceType": "Patient",
    "id": "{{ msg.id | default: msg.patientId | to_json_string | generate_uuid }}",
    "text": {
        "status": "generated",
        "div": "<div xmlns=\"http://www.w3.org/1999/xhtml\">Patient with PO Box address</div>"
    },
    "active": true,
    {% comment -%} Basic name handling {% endcomment -%}
    "name": [
        {
            "use": "official",
            {% if msg.name -%}
            "text": "{{ msg.name }}"
            {% elsif msg.firstName and msg.lastName -%}
            "family": "{{ msg.lastName }}",
            "given": ["{{ msg.firstName }}"]
            {% elsif msg.patientName -%}
            "text": "{{ msg.patientName }}"
            {% endif -%}
        }
    ],
    {% comment -%} PO Box address handling {% endcomment -%}
    "address": [
        {
            "use": "{{ msg.addressType | default: 'home' | downcase }}",
            "type": "postal",
            {% comment -%} PO Box line handling {% endcomment -%}
            {% if msg.poBox or msg.postOfficeBox or msg.mailbox -%}
            "line": [
                {% if msg.poBox -%}
                "PO Box {{ msg.poBox }}"
                {% elsif msg.postOfficeBox -%}
                "PO Box {{ msg.postOfficeBox }}"
                {% elsif msg.mailbox -%}
                "{{ msg.mailbox }}"
                {% endif -%}
                {% if msg.addressLine2 -%}
                ,"{{ msg.addressLine2 }}"
                {% endif -%}
            ],
            {% endif -%}
            {% if msg.city or msg.town -%}
            "city": "{{ msg.city | default: msg.town }}",
            {% endif -%}
            {% if msg.state or msg.province -%}
            "state": "{{ msg.state | default: msg.province }}",
            {% endif -%}
            {% if msg.zip or msg.zipCode or msg.postalCode -%}
            "postalCode": "{{ msg.zip | default: msg.zipCode | default: msg.postalCode }}",
            {% endif -%}
            {% if msg.country -%}
            "country": "{{ msg.country }}",
            {% endif -%}
            {% comment -%} PO Box-specific extensions {% endcomment -%}
            "extension": [
                {
                    "url": "http://hl7.org/fhir/StructureDefinition/iso21090-ADXP-deliveryAddressLine",
                    "valueString": "{{ msg.poBox | default: msg.postOfficeBox | default: msg.mailbox }}"
                }
                {% if msg.postOffice -%}
                ,{
                    "url": "http://hl7.org/fhir/StructureDefinition/iso21090-ADXP-deliveryInstallationType",
                    "valueString": "{{ msg.postOffice }}"
                }
                {% endif -%}
            ]
        }
    ],
    {% if msg.birthDate or msg.dob -%}
    "birthDate": "{{ msg.birthDate | default: msg.dob }}",
    {% endif -%}
    "managingOrganization": {
        "reference": "Organization/postal-service",
        "display": "Postal Service Healthcare"
    }
}