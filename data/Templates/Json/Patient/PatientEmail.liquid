{
    "resourceType": "Patient",
    "id": "{{ msg.id | default: msg.patientId | to_json_string | generate_uuid }}",
    "text": {
        "status": "generated", 
        "div": "<div xmlns=\"http://www.w3.org/1999/xhtml\">Patient with email: {{ msg.email | default: msg.emailAddress | default: msg.personalEmail | default: msg.workEmail }}</div>"
    },
    "active": true,
    {% comment -%} Basic name handling {% endcomment -%}
    "name": [
        {
            "use": "official",
            {% if msg.name -%}
            "text": "{{ msg.name }}"
            {% elsif msg.firstName and msg.lastName -%}
            "family": "{{ msg.lastName }}",
            "given": ["{{ msg.firstName }}"]
            {% elsif msg.patientName -%}
            "text": "{{ msg.patientName }}"
            {% endif -%}
        }
    ],
    {% comment -%} Email contact information {% endcomment -%}
    "telecom": [
        {% if msg.email -%}
        {
            "system": "email",
            "value": "{{ msg.email }}",
            "use": "{{ msg.emailType | default: 'home' | downcase }}"
        }{% if msg.emailAddress or msg.personalEmail or msg.workEmail %},{% endif %}
        {% endif -%}
        {% if msg.emailAddress -%}
        {
            "system": "email",
            "value": "{{ msg.emailAddress }}",
            "use": "home"
        }{% if msg.personalEmail or msg.workEmail %},{% endif %}
        {% endif -%}
        {% if msg.personalEmail -%}
        {
            "system": "email",
            "value": "{{ msg.personalEmail }}",
            "use": "home"
        }{% if msg.workEmail %},{% endif %}
        {% endif -%}
        {% if msg.workEmail -%}
        {
            "system": "email",
            "value": "{{ msg.workEmail }}",
            "use": "work"
        }
        {% endif -%}
    ],
    {% if msg.birthDate or msg.dob -%}
    "birthDate": "{{ msg.birthDate | default: msg.dob }}",
    {% endif -%}
    "managingOrganization": {
        "reference": "Organization/email-contacts",
        "display": "Email Contact Registry"
    }
}