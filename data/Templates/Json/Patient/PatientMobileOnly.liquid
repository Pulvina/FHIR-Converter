{
    "resourceType": "Patient",
    "id": "{{ msg.id | default: msg.patientId | to_json_string | generate_uuid }}",
    "text": {
        "status": "generated",
        "div": "<div xmlns=\"http://www.w3.org/1999/xhtml\">Patient with mobile phone: {{ msg.mobile | default: msg.mobilePhone | default: msg.cellPhone }}</div>"
    },
    "active": true,
    {% comment -%} Basic name handling {% endcomment -%}
    "name": [
        {
            "use": "official",
            {% if msg.name -%}
            "text": "{{ msg.name }}"
            {% elsif msg.firstName and msg.lastName -%}
            "family": "{{ msg.lastName }}",
            "given": ["{{ msg.firstName }}"]
            {% elsif msg.patientName -%}
            "text": "{{ msg.patientName }}"
            {% endif -%}
        }
    ],
    {% comment -%} Mobile-only contact information {% endcomment -%}
    "telecom": [
        {% if msg.mobile -%}
        {
            "system": "phone",
            "value": "{{ msg.mobile }}",
            "use": "mobile",
            "rank": 1
        }{% if msg.mobilePhone or msg.cellPhone %},{% endif %}
        {% endif -%}
        {% if msg.mobilePhone -%}
        {
            "system": "phone",
            "value": "{{ msg.mobilePhone }}",
            "use": "mobile",
            "rank": 1
        }{% if msg.cellPhone %},{% endif %}
        {% endif -%}
        {% if msg.cellPhone -%}
        {
            "system": "phone",
            "value": "{{ msg.cellPhone }}",
            "use": "mobile",
            "rank": 1
        }
        {% endif -%}
        {% comment -%} SMS capability if specified {% endcomment -%}
        {% if msg.sms or msg.smsPhone or msg.textNumber -%}
        ,{
            "system": "sms",
            "value": "{{ msg.sms | default: msg.smsPhone | default: msg.textNumber }}",
            "use": "mobile"
        }
        {% endif -%}
    ],
    {% if msg.birthDate or msg.dob -%}
    "birthDate": "{{ msg.birthDate | default: msg.dob }}",
    {% endif -%}
    "managingOrganization": {
        "reference": "Organization/mobile-health",
        "display": "Mobile Health Services"
    }
}