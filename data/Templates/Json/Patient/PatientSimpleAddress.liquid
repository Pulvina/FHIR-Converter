{
    "resourceType": "Patient",
    "id": "{{ msg.id | default: msg.patientId | to_json_string | generate_uuid }}",
    "text": {
        "status": "generated",
        "div": "<div xmlns=\"http://www.w3.org/1999/xhtml\">Patient with address: {{ msg.address | default: msg.street }}, {{ msg.city | default: msg.town }}</div>"
    },
    "active": true,
    {% comment -%} Basic name handling {% endcomment -%}
    "name": [
        {
            "use": "official",
            {% if msg.name -%}
            "text": "{{ msg.name }}"
            {% elsif msg.firstName and msg.lastName -%}
            "family": "{{ msg.lastName }}",
            "given": ["{{ msg.firstName }}"]
            {% elsif msg.patientName -%}
            "text": "{{ msg.patientName }}"
            {% endif -%}
        }
    ],
    {% comment -%} Simple address handling {% endcomment -%}
    "address": [
        {
            "use": "{{ msg.addressType | default: 'home' | downcase }}",
            {% if msg.address -%}
            "text": "{{ msg.address }}",
            {% endif -%}
            {% if msg.street or msg.streetAddress or msg.addressLine1 -%}
            "line": [
                "{{ msg.street | default: msg.streetAddress | default: msg.addressLine1 }}"
                {% if msg.addressLine2 -%}
                ,"{{ msg.addressLine2 }}"
                {% endif -%}
            ],
            {% endif -%}
            {% if msg.city or msg.town -%}
            "city": "{{ msg.city | default: msg.town }}",
            {% endif -%}
            {% if msg.state or msg.province -%}
            "state": "{{ msg.state | default: msg.province }}",
            {% endif -%}
            {% if msg.zip or msg.zipCode or msg.postalCode -%}
            "postalCode": "{{ msg.zip | default: msg.zipCode | default: msg.postalCode }}",
            {% endif -%}
            {% if msg.country -%}
            "country": "{{ msg.country }}"
            {% endif -%}
        }
    ],
    {% if msg.birthDate or msg.dob -%}
    "birthDate": "{{ msg.birthDate | default: msg.dob }}",
    {% endif -%}
    "managingOrganization": {
        "reference": "Organization/simple-address",
        "display": "Simple Address Healthcare"
    }
}