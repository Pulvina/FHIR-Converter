{
    "resourceType": "Patient",
    "id": "{{ msg.entry[0].resource.id | to_json_string | generate_uuid }}",
    "text": {
        "status": "generated",
        "div": "<div xmlns=\"http://www.w3.org/1999/xhtml\">Intelligent Patient Template</div>"
    },
    "active": true,
    "identifier": [
        {
            "use": "usual",
            "type": {
                "coding": [{
                    "system": "http://terminology.hl7.org/CodeSystem/v2-0203",
                    "code": "MR",
                    "display": "Medical record number"
                }]
            },
            "system": "urn:oid:2.16.840.1.113883.4.1",
            "value": "{{ msg.entry[0].resource.id }}"
        },
        {
            "use": "usual",
            "type": {
                "coding": [{
                    "system": "http://terminology.hl7.org/CodeSystem/v2-0203",
                    "code": "MR",
                    "display": "Medical record number"
                }]
            },
            "system": "urn:oid:2.16.840.1.113883.4.1",
            "value": "{{ msg.entry[1].resource.id }}"
        },
        {
            "use": "usual",
            "type": {
                "coding": [{
                    "system": "http://terminology.hl7.org/CodeSystem/v2-0203",
                    "code": "MR",
                    "display": "Medical record number"
                }]
            },
            "system": "urn:oid:2.16.840.1.113883.4.1",
            "value": "{{ msg.entry[2].resource.id }}"
        }
    ],
    "name": [
        {
            "use": "official",
            "text": "{{ msg.entry[0].resource.name }}"
        }
    ],
    {% if msg.entry[0].resource.gender -%}
    "gender": {% assign g = msg.entry[0].resource.gender | downcase -%}
        {% case g -%}
            {% when 'm' -%}"male"
            {% when 'male' -%}"male"
            {% when 'man' -%}"male"
            {% when 'f' -%}"female"
            {% when 'female' -%}"female"
            {% when 'woman' -%}"female"
            {% when 'o' -%}"other"
            {% when 'other' -%}"other"
            {% when 'u' -%}"unknown"
            {% when 'unknown' -%}"unknown"
            {% when 'n/a' -%}"unknown"
            {% else -%}"unknown"
        {% endcase -%},
    {% endif -%}
    {% if msg.entry[0].resource.birthDate -%}
    "birthDate": "{{ msg.entry[0].resource.birthDate }}",
    {% endif -%}
    "managingOrganization": {
        "reference": "Organization/intelligent-system",
        "display": "Intelligent Template System"
    }
}